{
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": [
        "https://*/tours/loadboard*",
        "http://*/tours/loadboard*",
        "https://*/loadboard*",
        "http://*/loadboard*"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  },
  "sandbox": {
    "pages": ["background/background.html"]
  },
  "description": "Reinvent the Amazon Relay load board with Relay Auto-Refresher",
  "icons": {
    "128": "assets/icon128.png",
    "16": "assets/icon16.png",
    "48": "assets/icon48.png"
  },
  "manifest_version": 3,
  "name": "Relay Auto-Refresher",
  "permissions": ["tabs", "storage", "webRequest", "declarativeNetRequest"],
  "host_permissions": [
    "https://relay.amazon.com/api/loadboard/search",
    "https://relay.amazon.de/api/loadboard/search",
    "https://relay.amazon.co.uk/api/loadboard/search"
  ],
  "short_name": "Relay Auto-Refresher",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.7.0",
  "web_accessible_resources": [
    {
      "resources": ["assets/onBtn.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/onBtn2.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/offBtn.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/n.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
